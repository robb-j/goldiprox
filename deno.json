{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read=. --allow-sys --watch=.env,config.json main.ts --verbose",
    "compile": "deno compile --allow-net --allow-env --allow-read main.ts",
    "main": "deno run --allow-net --allow-env --allow-read --allow-sys main.ts",
    "echo": "./echo.ts"
  },
  "fmt": {
    "singleQuote": true,
    "semiColons": false
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.6",
    "@std/cli": "jsr:@std/cli@^1.0.6",
    "superstruct": "npm:superstruct@^1.0.3/"
  }
}
